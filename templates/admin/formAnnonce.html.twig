{% extends 'base.html.twig' %}

{% block title %}Ajouter une annonce{% endblock %}

{% block body %}
{# formulaire #}
<div class="container">
    <h1 class="pt-2 text-center" style="color:white">
        {% if route == "app_admin_form" %}
            Ajouter
        {% else %}
            Modifier
        {% endif %}
        une annonce
    </h1>

    <br>

    {{ form_start(formAnnonce, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_row(formAnnonce.organisme, {'label': "Nom de l'annonce"}) }}
    {{ form_row(formAnnonce.description) }}
    <div class="row">
    </div>

    {{ form_row(formAnnonce.image) }}

    {{ form_end(formAnnonce) }}
    <br>

    {# Les boutons #}
    <div class="row justify-content-center">
        <div class="col-auto">
            <a href="{{ path('adminA') }}" class="btn btn-warning">Annuler</a>
        </div>
        <div class="col-auto">
            <input type="submit" class="btn btn-success" value={% if route == "app_admin_form" %}
               "Ajouter l'annonce"
            {% else %}
                "Modifier l'annonce"
            {% endif %}>
        </div>
    </div>
</div>

<br><br><br>
{% endblock %}
